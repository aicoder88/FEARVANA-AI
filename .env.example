# ============================================================================
# FEARVANA AI - Environment Variables Template
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# ============================================================================

# ----------------------------------------------------------------------------
# Core Application
# ----------------------------------------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ----------------------------------------------------------------------------
# AI Services
# ----------------------------------------------------------------------------
# OpenAI API (GPT-4o for chat and embeddings)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API (Claude 3 Sonnet - primary model)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ElevenLabs Voice AI (custom Akshay voice)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Pinecone Vector Database (for RAG)
PINECONE_API_KEY=your-pinecone-api-key-here

# ----------------------------------------------------------------------------
# Database (Supabase)
# ----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# ----------------------------------------------------------------------------
# CRM Integration
# ----------------------------------------------------------------------------
# Provider: hubspot | salesforce | pipedrive | mock
CRM_PROVIDER=mock
CRM_ENABLED=true

# For production, uncomment and set:
# CRM_API_KEY=your-crm-api-key-here
# CRM_ENDPOINT=https://api.hubspot.com (or your CRM endpoint)

# For development with mock provider, these are automatically set:
# (No API key needed for mock provider)

# ----------------------------------------------------------------------------
# Scheduling Integration
# ----------------------------------------------------------------------------
# Provider: calendly | acuity | google-calendar | mock
SCHEDULING_PROVIDER=mock
SCHEDULING_ENABLED=true

# For production, uncomment and set:
# SCHEDULING_API_KEY=your-scheduling-api-key-here
# SCHEDULING_ENDPOINT=https://api.calendly.com (or your scheduling endpoint)

# For development with mock provider, these are automatically set:
# (No API key needed for mock provider)

# ----------------------------------------------------------------------------
# Email Integration
# ----------------------------------------------------------------------------
# Provider: sendgrid | postmark | aws-ses | mock
EMAIL_PROVIDER=mock
EMAIL_ENABLED=true
EMAIL_FROM_ADDRESS=coach@fearvana.local
EMAIL_FROM_NAME=Akshay from Fearvana

# For production, uncomment and set:
# EMAIL_API_KEY=your-email-api-key-here
# For SendGrid: sg.your-sendgrid-api-key
# For Postmark: your-postmark-server-token
# For AWS SES: your-aws-access-key

# ----------------------------------------------------------------------------
# Cache Configuration
# ----------------------------------------------------------------------------
# Enable/disable caching (default: true)
CACHE_ENABLED=true

# Cache TTL in seconds (default: 300 = 5 minutes)
CACHE_DEFAULT_TTL=300

# Maximum cache size in entries (default: 1000)
CACHE_MAX_SIZE=1000

# ----------------------------------------------------------------------------
# Circuit Breaker Configuration
# ----------------------------------------------------------------------------
# Number of failures before opening circuit (default: 5)
CIRCUIT_BREAKER_THRESHOLD=5

# Milliseconds to wait before attempting reset (default: 60000 = 1 minute)
CIRCUIT_BREAKER_TIMEOUT=60000

# Milliseconds to wait in half-open before closing (default: 10000 = 10 seconds)
CIRCUIT_BREAKER_RESET_TIMEOUT=10000

# ============================================================================
